<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/anime"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/anime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/riset_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/reastview"
        android:layout_width="298dp"
        android:layout_height="462dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sikakuview"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/sikaku"
        app:layout_constraintBottom_toBottomOf="@+id/reastview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sikakuview2"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/sikaku"
        app:layout_constraintBottom_toBottomOf="@+id/sikakuview"
        app:layout_constraintEnd_toEndOf="@+id/reastview"
        app:layout_constraintStart_toStartOf="@+id/reastview" />

    <ImageView
        android:id="@+id/sikakuview3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/sikaku"
        app:layout_constraintEnd_toEndOf="@+id/reastview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reastview"
        app:layout_constraintTop_toTopOf="@+id/reastview" />

    <ImageView
        android:id="@+id/surfaceView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/maru"
        app:layout_constraintBottom_toBottomOf="@+id/sikakuview"
        app:layout_constraintStart_toStartOf="@+id/reastview"
        app:layout_constraintTop_toTopOf="@+id/reastview" />

</androidx.constraintlayout.widget.ConstraintLayout>